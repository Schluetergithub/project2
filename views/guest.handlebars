  <div class="container">

    <br>

    <!-- Jumbotron -->
    <div class="jumbotron">
      <h1>{{msg}}</h1>
    </div>

    <div class="row">

      <!-- Sign-Up Card-->
      <div class="col-lg-6">
        <div class="card card-default">
          <div class="card-heading">
            <h3 class="card-title">Create a Team!</h3>
          </div>
          <div class="card-body">

            <!-- Sign-up Form (note the various input "types")-->
            <form role="form">

              <div class="form-group row">
                <label for="teamname-input">Team Name:</label>
                <input class="form-control" id="teamname-input" type="text">
              </div>

              <div class="form-group row">
                <label for="qbs-input">QB:</label>
                <select name="Qbs" id="Qbs">
                    <option value="TomBrady">Tom Brady</option>
                    <option value="JaredGoff">Jared Goff</option>
                    <option value="KirkCousins">Kirk Cousins</option>
                </select>

               <!-- <input class="form-control" id="email-input" type="email">-->

              </div>

              <div class="form-group row">
                <label for="age-input">RB:</label>
                <select name="Rbs" id="Rbs">
                    <option value="ToddGurley">Todd Gurley</option>
                    <option value="DalvinCook">Dalvin Cook</option>
                    <option value="LataviusMurray">Latavius Murray</option>
                </select>
                
                <!--<input class="form-control" id="age-input" type="number">-->

              </div>

              <div class="form-group row">
                <label for="wrs-input">WR:</label>
                <select name="Wrs" id="Wrs">
                    <option value="BrandonCooks">Brandon Cooks</option>
                    <option value="StefonDiggs">Stefon Diggs</option>
                    <option value="RobertWoods">Robert Woods</option>
                </select>
                <!--<textarea class="form-control" id="comment-input" rows="5"></textarea>-->

              </div>

              <button class="btn btn-default" id="add-team" type="submit">Submit</button>

            </form>
          </div>
        </div>
      </div>

      <!-- Most Recent Member Card -->
      <div class="col-lg-6">
        <div class="card card-default">
          <div class="card-heading">
            <h3 class="card-title">Active Team Roster</h3>
          </div>
          <div class="card-body" id="recent-member">
            <h2 id="teamname-display"></h2>
            <h4 id="qbs-display">QB: </h4>
            <h4 id="rbs-display">RB: </h4>
            <h4 id="wrs-display">WR: </h4>
          </div>
        </div>
      </div>

    </div>

  </div>

